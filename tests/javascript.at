AT_DATA([inject.js],
[[exports.stub = function() {
  extension = {
    listener: null,

    setMessageListener: function(f) {
      this.listener = f;
    },

    postMessage: function(msg) {
      var json = JSON.parse(msg);
      var resMsg = { id: json.id };

      if (json.cmd === 'scan-finger') {
        resMsg.length = 1;
        resMsg['0'] = null;
        var cb = this.listener.bind(null, JSON.stringify(resMsg));
        setTimeout(cb, 0);
      }
    }
  };

  return extension;
}
]])
